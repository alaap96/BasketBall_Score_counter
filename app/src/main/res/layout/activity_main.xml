<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="4dp"
            android:text="Score Team A"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:id="@+id/Score_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="4dp"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:onClick="Three_pointer_A"
            android:paddingBottom="8dp"
            android:text="3 Points"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/holo_orange_dark"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="10dp"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:onClick="Two_pointer_A"
            android:paddingBottom="8dp"
            android:text="+2 points"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/holo_orange_dark"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="10dp"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:onClick="Free_Throw_A"
            android:paddingBottom="8dp"
            android:text="Free_Throw"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/holo_orange_dark"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="10dp"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="4dp"
            android:text="Score Team B"
            android:padding="10dp"
            android:layout_margin="10dp"

            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:id="@+id/Score_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="4dp"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:onClick="Three_pointer_B"
            android:paddingBottom="8dp"
            android:text="3 points"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/holo_orange_dark"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="10dp"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:onClick="Two_pointer_B"
            android:paddingBottom="8dp"
            android:text="+2 points"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/holo_orange_dark"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="10dp"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:onClick="Free_Throw_B"
            android:paddingBottom="8dp"
            android:text="Free Throw"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/holo_orange_dark"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="10dp"
            android:layout_margin="10dp"/>
    </LinearLayout>


</LinearLayout>
